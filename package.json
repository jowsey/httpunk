{
  "name": "httpunk",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "bun --bun run vite build",
    "dev": "concurrently --names \"ws,vite\" \"bun --watch run src/lib/server/websocket.ts\" \"bun --bun run vite dev\"",
    "prod": "concurrently --names \"ws,web\" \"bun run src/lib/server/websocket.ts\" \"bun --bun run ./build/\"",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "better-auth:generate": "bunx --bun @better-auth/cli generate --output ./src/lib/server/db/schema/better-auth.ts && prettier --write ./src/lib/server/db/schema/better-auth.ts",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.2.12",
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/adapter-node": "^5.2.13",
    "@sveltejs/kit": "^2.25.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/bun": "^1.2.18",
    "@types/node": "^24.0.14",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.11.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "svelte": "^5.36.7",
    "svelte-check": "^4.3.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vite": "^7.0.5"
  },
  "dependencies": {
    "better-auth": "^1.2.12",
    "drizzle-orm": "^0.44.3"
  },
  "trustedDependencies": [
    "@prisma/client",
    "@prisma/engines",
    "@tailwindcss/oxide",
    "better-sqlite3",
    "esbuild",
    "prisma"
  ]
}