{
	"name": "httpunk",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build": "bun --bun run vite build",
		"dev": "docker compose up -d && NODE_ENV=development concurrently --names 'core,vite' --prefix=' {name} ' --prefix-colors='bgBlue.white,bgGreen.black' 'bun --watch run src/lib/server/core' 'bun --bun run vite dev --host'",
		"prod": "docker compose up -d && NODE_ENV=production concurrently --names 'core,web' --prefix=' {name} ' --prefix-colors='bgBlue.white,bgYellow.black' 'bun run src/lib/server/core' 'bun --bun run ./build/'",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"better-auth:generate": "bunx --bun @better-auth/cli generate --output ./src/lib/server/db/schema/better-auth.ts && prettier --write ./src/lib/server/db/schema/better-auth.ts",
		"db:push": "bun --bun run drizzle-kit push",
		"db:migrate": "bun --bun run drizzle-kit migrate",
		"db:studio": "bun --bun run drizzle-kit studio"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.3.23",
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.36.0",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/adapter-node": "^5.3.2",
		"@sveltejs/kit": "^2.43.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.13",
		"@types/bun": "^1.2.23",
		"@types/node": "^24.5.2",
		"@types/three": "^0.179.0",
		"drizzle-kit": "^0.31.5",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"offset-polygon": "^0.9.2",
		"overlayscrollbars-svelte": "^0.5.5",
		"pg": "^8.16.3",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.39.6",
		"svelte-check": "^4.3.2",
		"tailwindcss": "^4.1.13",
		"three": "^0.180.0",
		"three-viewport-gizmo": "^2.2.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.1",
		"vite": "^7.1.7",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"dependencies": {
		"better-auth": "^1.3.23",
		"chalk": "^5.6.2",
		"concurrently": "^9.2.1",
		"dayjs": "^1.11.18",
		"drizzle-orm": "^0.44.5"
	},
	"trustedDependencies": [
		"@prisma/client",
		"@prisma/engines",
		"@tailwindcss/oxide",
		"better-sqlite3",
		"esbuild",
		"prisma"
	]
}
